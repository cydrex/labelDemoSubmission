
<table class="table">
  <thead>

    <tr>
      <th scope="col">Artist name</th>
      <th scope="col">Title</th>
      <th scope="col">Genre</th>
      <th scope="col">demo</th>
      <th scope ="col">Approve/delete</th>
    </tr>
  </thead>
  
  <tbody>
    {{#each unapproved }}
      <div class="container">
    <div class="row">
      <tr>
          <th scope="row">{{ name }}</th>
          <td>{{ title }}</td>
          <td>{{ genre }}</td>  
          <td><div class="player">
          </div><audio src="/{{demopath}}" preload="auto" /></td>
          <td><form method="POST" action="/approve/{{ _id }}"><button type="submit" class="btn btn-outline-success waves-effect btn-sm">Approve</button></form>
          <form method="POST" action="/delete/{{ _id }}"><button type="submit" class="btn btn-outline-danger waves-effect btn-sm">Delete</button></form></td>
      </tr>
    </div>
    <div class="row">
        <div class="col-md-10"></div>
    </div>
</div>





    {{/each}}
  </tbody>
</table>



{{#each unapproved }}
<div class="card text-center border border-info">
  <div class="card-header">
    <ul class="nav nav-pills card-header-pills">
      <li class="nav-item">
        <form method="POST" action="/approve/{{ _id }}"><button type="submit" class="btn btn-outline-success waves-effect btn-sm">Approve</button></form>      </li>
      <li class="nav-item">
        <form method="POST" action="/delete/{{ _id }}"><button type="submit" class="btn btn-outline-danger waves-effect btn-sm">Delete</button></form>      </li>
    </ul>
  </div>
  <div class="card-body">
    <h5 class="card-title">Artisit name: {{ name }}</h5>
    <p class="card-text">Track title: {{ title }}</p>
    <p class="card-text">Genre: {{ genre }}</p>
<audio id="player" controls>
    <source src="/{{demopath}}" type="audio/mp3" />
</audio>
  </div>
</div>
<br>
{{/each}}